import logging

import azure.functions as func


def main(events: func.EventHubEvent, outputDocument: func.Out[func.Document]) -> None:
    for event in events:
        message = event.get_body().decode("utf-8")
        logging.info(f"Received message: {message}")

        # Store the message in Azure Cosmos DB
        outputDocument.set(func.Document.from_json(message))
